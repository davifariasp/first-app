<%- contentFor( 'body') %>

<% let linkList = "/cadastro/list"; %>
<% let linkAdd = "/cadastro/add"; %>

<div class="table-responsive-xl ">
    <h2>Cadastrar novo usuário</h2>

    <form name="cadastro" action="#">
        <div class="form-group">
            <label for="_name">Nome:</label>
            <input type="text" name="_name" id="_name" class="form-control">
        </div>

        <div class="form-group">
            <label for="_email">E-mail:</label>
            <input type="text" name="_email" id="_email" class="form-control">
        </div>

        <div class="form-group">
            <label for="_address">Endereço:</label>
            <input type="text" name="_address" id="_address" class="form-control">
        </div>

        <div class="form-group">
            <label for="_age">Idade:</label>
            <input type="number" name="_age" id="_age" class="form-control">
        </div>

        <div class="form-group">
            <label for="_height">Altura:</label>
            <input type="number" name="_height" id="_height" class="form-control">
        </div>

        <div class="form-group">
            <label for="_vote">Votou:</label>
            <input type="checkbox" name="_vote" id="_vote" class="form-control">
        </div>

        <div class="form-group">
            <input type="button" onclick="add(document.cadastro,'<%=linkAdd%>')" value="Enviar" class="btn btn-success">
        </div>

    </form>

    <div>
        <button onclick="list('<%=linkList%>')" class="btn btn-success">Listar Usuários</button>     
    </div>
    <br>

    <div id="listausuarios" class="hidden">
    <h2>Usuários Cadastrados</h2>
    <p>Lista de usuários Cadastrados no sistema.</p>            
    <table class="table table-hover bg-light" id="list-users">
        <thead class="thead-dark">
        <tr>
            <th>Nome</th>
            <th>Endereço</th>
            <th>Email</th>
            <th>Idade</th>
            <th>Altura</th>
            <th>Vota?</th>
        </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
    </div>
</div>